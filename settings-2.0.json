{
  // ==============================
  // Editor Settings
  // ==============================
  "editor.fontSize": 16,
  "editor.fontFamily": "Fira Code, Operator Mono",
  "editor.fontLigatures": true,
  "editor.links": true,
  "editor.mouseWheelZoom": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  "editor.cursorWidth": 3,
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "editor.stickyScroll.enabled": false,

  // ==============================
  // File and Explorer Behavior
  // ==============================

  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true
  },
  "files.associations": {
    "*html": "html",
    "*njk": "html"
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // ==============================
  // Terminal Settings
  // ==============================
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "Fira Code, Operator Mono",
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.cursorWidth": 3,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",

  // ==============================
  // JavaScript / TypeScript
  // ==============================
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // ==============================
  // Git & GitLens
  // ==============================
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "gitlens.ai.model": "gitkraken",
  "gitlens.ai.gitkraken.model": "gemini:gemini-2.0-flash",

  // ==============================
  // Emmet and Tailwind CSS
  // ==============================
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "plaintext": "pug"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "javascript": "javascript",
    "javascriptreact": "javascript"
  },

  // ==============================
  // Formatting and Linting
  // ==============================
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.options": {
    "extensions": [".js", ".jsx", ".ts", ".tsx"]
  },

  // ====================================
  // Workbench and Customizations Theme
  // ====================================
  "workbench.colorTheme": "Learn with Sumit Official Theme",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.list.multiSelectModifier": "alt",
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#d82756",
    "terminalCursor.foreground": "#27ff27",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorStyleInactive": "underline",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorWidth": 5,
    "statusBarItem.remoteBackground": "default",
    "statusBarItem.remoteHoverBackground": "default"
  },

  // Syntax highlighting customization
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // ==============================
  // Miscellaneous
  // ==============================
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "compact",
  "cSpell.userWords": ["Unkown"],
  "security.workspace.trust.untrustedFiles": "open",
  "tabnine.experimentalAutoImports": true,
  "css.customData": [""],
  "css.lint.validProperties": [""],
  "liveServer.settings.donotShowInfoMsg": true,

  // Prettier configuration
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.semi": true,
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.jsxSingleQuote": true,
  // ================================================END==================================

}
